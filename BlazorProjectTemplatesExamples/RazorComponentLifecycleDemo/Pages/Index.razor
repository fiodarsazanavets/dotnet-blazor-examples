@page "/"
@using Microsoft.Extensions.Logging
@inject ILogger<Index> Logger

<PageTitle>Index</PageTitle>

<h1>Hello, world!</h1>

<p>Last fired event: @lastEventFired</p>

@code {
    private string lastEventFired = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        lastEventFired = "OnInitializedAsync";
        Logger.LogInformation("OnInitializedAsync fired");
    }

    protected override void OnInitialized()
    {
        lastEventFired = "OnInitialized";
        Logger.LogInformation("OnInitialized fired");
    }

    protected override async Task OnParametersSetAsync()
    {
        lastEventFired = "OnParametersSetAsync";
        Logger.LogInformation("OnParametersSetAsync fired");
    }

    protected override void OnParametersSet()
    {
        lastEventFired = "OnParametersSet";
        Logger.LogInformation("OnParametersSet fired");
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        lastEventFired = "OnAfterRenderAsync";
        Logger.LogInformation("OnAfterRenderAsync fired");
    }

    protected override void OnAfterRender(bool firstRender)
    {
        lastEventFired = "OnAfterRender";
        Logger.LogInformation("OnAfterRender fired");
    }
}
