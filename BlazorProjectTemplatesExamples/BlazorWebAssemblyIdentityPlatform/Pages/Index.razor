@page "/"

<PageTitle>Index</PageTitle>

<AuthorizeView>
    <Authorized>
        <h1>Hello, @context.User.Identity.Name!</h1>
        <p>You can only see this content if you're authorized.</p>
    </Authorized>
    <NotAuthorized>
        <div class="alert alert-warning" role="alert">
            You are not authorized to view this page!
        </div>
    </NotAuthorized>
</AuthorizeView>
